<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:background="@color/mainbg"
    android:clickable="true">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_weight="9"
            android:orientation="vertical">


            <TextView
                android:id="@+id/list_patientname_appointmentDoc"
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="start"

                android:text="Patname"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_docclinic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_patientname_appointmentDoc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-87dp"
                android:text="clinic name"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appointment_status_seched"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_docclinic"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-1dp"
                android:gravity="center_vertical|start"
                android:text="Status"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_patientRec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="3dp"
                android:text="Patient Record" />

            <TextView
                android:id="@+id/schedule_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list_docclinic"
                android:layout_alignEnd="@id/btn_patientRec"
                android:layout_alignRight="@id/btn_patientRec"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-22dp"
                android:layout_marginEnd="33dp"
                android:layout_marginRight="33dp"
                android:text="Schedule"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
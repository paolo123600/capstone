<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout_doc"
    tools:openDrawer="start"

    android:background="@color/mainbg"
    tools:context=".doctor_homepage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="198dp"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="267dp"
            android:paddingLeft="10dp"
            android:text="Appoinments Today"
            android:textSize="12dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="251dp" />




        <TextView
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginLeft="66dp"
            android:layout_marginTop="260dp"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="Upcoming"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="251dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="412dp"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="117dp" />

        <Button
            android:id="@+id/btn_chat_dochome"
            android:layout_width="76dp"
            android:layout_height="67dp"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="549dp"
            android:background="@drawable/round_shape"
            android:drawableLeft="@drawable/ic_chat_doc"
            android:ems="10"
            android:paddingLeft="20dp"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/btn_appointment"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="558dp"
            android:background="@drawable/shapes"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="Appointments"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/btn_patientrecord"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="263dp"
            android:layout_marginLeft="263dp"
            android:layout_marginTop="558dp"
            android:background="@drawable/shapes"
            android:ems="10"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:text="Patient Record"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="251dp" />

        <RelativeLayout
            android:layout_width="372dp"
            android:layout_height="137dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/dochome_box" />

        <Button
            android:id="@+id/btn_patient"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="244dp"
            android:layout_marginLeft="244dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/pat_rec_button"
            android:text="Pateint record"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvSched"
            android:layout_width="155dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="165dp"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="Schedule"
            android:textColor="@color/white"
            android:textSize="15dp"

            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="251dp" />

        <Button
            android:id="@+id/btn_call"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="259dp"
            android:layout_marginLeft="259dp"
            android:layout_marginTop="147dp"
            android:background="@drawable/ic_doc_phone" />

        <TextView
            android:id="@+id/tvPatname"
            android:layout_width="156dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="104dp"
            android:ems="10"
            android:paddingLeft="10dp"
            android:text="Patient"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="99dp"
            tools:layout_editor_absoluteY="251dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/button"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <com.google.android.material.circularreveal.CircularRevealFrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewer_doc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu_doc"/>



</androidx.drawerlayout.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainbg">


    <TextView
        android:id="@+id/tv_Instruction"
        android:layout_width="412dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:text="Medicall Application Instruction: Book Now Button allows you to book an appointment for the application."
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/ins_sched"
        android:layout_width="400dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="271dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:text="Schedule Button: Allows you to see the schedules that you have booked in the clinc "
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/ins_chat"
        android:layout_width="416dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:text="Chat Now Button: Allows you to Talk to the Doctor and Secretary in the clinic "
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/ins_booknow"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:text="Book Now Button allows you to book an appointment for the application. "
        android:textSize="@dimen/_15sdp" />

    <Button
        android:id="@+id/btn_confirm_act_instruction"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ins_sched"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:background="@drawable/darkround"
        android:text="Confirm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="321dp" />


</RelativeLayout>
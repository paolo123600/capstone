<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/mainbg"
    android:id="@+id/drawer_layout_sec"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".secretary_homepage">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">


           <LinearLayout
               android:id="@+id/firstcard"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="@dimen/_80sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:layout_marginEnd="@dimen/_20sdp">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_130sdp"
                   android:background="@drawable/pendingbg"
                   android:orientation="vertical"
                   android:layout_weight="1">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Pending Appointments"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_5sdp"
                       android:textColor="@color/darkgrey"/>

                   <ImageView
                       android:layout_width="@dimen/_65sdp"
                       android:layout_height="@dimen/_65sdp"
                       android:background="@drawable/pendingbgpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"
                       android:layout_marginTop="@dimen/_2sdp"
                       android:layout_gravity="center"/>


               </LinearLayout>

               <LinearLayout
                   android:id="@+id/appointment_button"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:background="@drawable/appointmentbg"
                   android:orientation="vertical"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:layout_weight="1">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Appointments"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_10sdp"
                       android:textColor="@color/darkgrey"/>

                   <ImageView
                       android:layout_width="@dimen/_70sdp"
                       android:layout_height="@dimen/_70sdp"
                       android:background="@drawable/appointmentpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"
                       android:layout_marginTop="@dimen/_10sdp"
                       android:layout_gravity="center"/>

               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:id="@+id/bottomcard"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/firstcard"
               android:orientation="horizontal"
               android:layout_marginStart="@dimen/_20sdp"
               android:layout_marginEnd="@dimen/_20sdp"
               android:layout_marginTop="@dimen/_10sdp">

               <LinearLayout
                   android:id="@+id/notification_button"
                   android:layout_width="0dp"
                   android:layout_height="@dimen/_130sdp"
                   android:background="@drawable/notificationbg"
                   android:orientation="vertical"
                   android:layout_weight="1">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Patient List"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_10sdp"
                       android:textColor="@color/darkgrey"/>

                   <ImageView
                       android:layout_width="@dimen/_55sdp"
                       android:layout_height="@dimen/_70sdp"
                       android:background="@drawable/patientrecordpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"
                       android:layout_gravity="center"/>

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/manage_schedule_button"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:background="@drawable/manageschedbg"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:orientation="vertical"
                   android:layout_weight="1">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/Manage_schedule"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_5sdp"
                       android:textColor="@color/darkgrey"/>

                   <ImageView
                       android:layout_width="@dimen/_70sdp"
                       android:layout_height="@dimen/_60sdp"
                       android:background="@drawable/manageschedpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:layout_gravity="center"/>

               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/bottomcard"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:layout_marginEnd="@dimen/_20sdp">

               <Button
                   android:id="@+id/patient_record"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/Notification"
                   android:gravity="start|center"
                   android:drawableLeft="@drawable/ic_notif"
                   android:drawablePadding="@dimen/_10sdp"
                   android:paddingLeft="@dimen/_20sdp"
                   android:textColor="@color/white"
                   android:background="@drawable/darkround"/>

               <Button
                   android:id="@+id/secretary_chat_btn"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/chat"
                   android:background="@drawable/darkround"
                   android:layout_marginTop="@dimen/_10sdp"
                   android:gravity="start|center"
                   android:drawableLeft="@drawable/ic_chat_doc"
                   android:drawablePadding="@dimen/_10sdp"
                   android:paddingLeft="@dimen/_20sdp"
                   android:textColor="@color/white"/>


           </LinearLayout>


       </androidx.constraintlayout.widget.ConstraintLayout>


   </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/button"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <com.google.android.material.circularreveal.CircularRevealFrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_viewer_sec"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu_sec" />






</androidx.drawerlayout.widget.DrawerLayout>


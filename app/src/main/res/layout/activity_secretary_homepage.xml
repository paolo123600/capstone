<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:background="@color/mainbg"
    android:id="@+id/drawer_layout_sec"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".secretary_homepage">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <LinearLayout
               android:id="@+id/firstcard"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="@dimen/_80sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:layout_marginEnd="@dimen/_20sdp">

               <LinearLayout
                   android:layout_width="@dimen/_133sdp"
                   android:layout_height="@dimen/_130sdp"
                   android:background="@drawable/pendingbg"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Pending Appointments"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_5sdp"
                       android:textColor="@color/white"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/pendingbgpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"/>


               </LinearLayout>

               <LinearLayout
                   android:layout_width="@dimen/_133sdp"
                   android:layout_height="@dimen/_130sdp"
                   android:background="@drawable/appointmentbg"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Appointments"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_5sdp"
                       android:textColor="@color/white"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/appointmentpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"/>

               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:id="@+id/bottomcard"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/firstcard"
               android:orientation="horizontal"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:layout_marginEnd="@dimen/_20sdp">

               <LinearLayout
                   android:layout_width="@dimen/_133sdp"
                   android:layout_height="@dimen/_130sdp"
                   android:background="@drawable/notificationbg"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Notification"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_5sdp"
                       android:textColor="@color/white"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/pendingbgpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"/>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="@dimen/_133sdp"
                   android:layout_height="@dimen/_130sdp"
                   android:background="@drawable/manageschedbg"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Notification"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="@dimen/_15ssp"
                       android:padding="@dimen/_5sdp"
                       android:textColor="@color/white"/>

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/pendingbgpic"
                       android:layout_marginStart="@dimen/_20sdp"
                       android:layout_marginEnd="@dimen/_20sdp"/>

               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/bottomcard"
               android:orientation="vertical"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:layout_marginEnd="@dimen/_20sdp">

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/patient_record"/>

               <Button
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/chat"/>


           </LinearLayout>


       </androidx.constraintlayout.widget.ConstraintLayout>


   </ScrollView>



</androidx.drawerlayout.widget.DrawerLayout>


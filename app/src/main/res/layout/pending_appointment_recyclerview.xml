<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:background="@color/mainbg"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/pending_patientname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:text="PatientName"
            android:textAllCaps="true"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/pending_sched"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Schedule"
            android:padding="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/pending_doctorname"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Doctorname"
            android:padding="@dimen/_5sdp"/>

        <Button
            android:id="@+id/pending_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="View and Manage"
            android:background="@drawable/darkround"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/white"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>
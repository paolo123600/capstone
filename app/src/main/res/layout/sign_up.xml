<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainbg"
    tools:context=".Sign_UpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/signuplabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="@dimen/_15sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:textColor="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/signuplabel"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last name"
                android:paddingLeft="@dimen/_80sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M.I"
                android:paddingLeft="@dimen/_80sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/nameeditbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nameline"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <EditText
                android:id="@+id/Fname"
                android:inputType="textPersonName"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:padding="@dimen/_5sdp"/>

            <EditText
                android:id="@+id/Lname"
                android:inputType="textPersonName"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"/>

            <EditText
                android:id="@+id/Mi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:inputType="textPersonName"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bdaylabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/nameeditbox"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Birth"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nationality"
                android:layout_marginLeft="@dimen/_70sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex"
                android:layout_marginLeft="@dimen/_49sdp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/bdaylabel"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <Button
                android:id="@+id/btn_bday"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:onClick="openDatePickerView"
                android:hint="January 1 2021"
                android:inputType="date"
                style="spinner"
                android:background="@drawable/roundtbox" />

            <EditText
                android:id="@+id/nationality"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:layout_marginLeft="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"/>

            <Spinner
                android:id="@+id/gender"
                android:visibility="visible"
                android:layout_width="@dimen/_66sdp"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:layout_marginLeft="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dateedittext"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact number"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/contactlabel"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <EditText
                android:id="@+id/contact2"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Email"
                android:paddingTop="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/email"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:paddingTop="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify Password"
                android:paddingTop="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/confirm_pass"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:paddingTop="@dimen/_5sdp"/>

            <EditText
                android:id="@+id/address"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/municipallabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/contactedittext"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Municipality"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal Code"
                android:layout_marginLeft="@dimen/_112sdp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/municipaledittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/municipallabel"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp">

            <EditText
                android:id="@+id/municipality"
                android:inputType="textPersonName"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:padding="@dimen/_5sdp"/>

            <EditText
                android:id="@+id/postalcode"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/roundtbox"
                android:layout_marginLeft="@dimen/_10sdp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/municipaledittext"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <Button
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/darkround"
                android:text="Continue"
                android:textColor="@color/white"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
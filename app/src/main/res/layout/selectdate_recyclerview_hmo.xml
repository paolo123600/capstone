<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    android:background="@color/mainbg"
    android:clickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rec_time_hmo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time"
                android:textAllCaps="true"
                android:textSize="15dp"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/rec_maxbooking_hmo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="Maximum Booking"
                android:padding="@dimen/_5sdp"/>

            <TextView
                android:id="@+id/rec_numbooking_hmo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="NO of Booking"
                android:paddingTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"/>

            <Button
                android:id="@+id/rec_booknow_hmo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="Book Now"
                android:background="@drawable/darkround"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">




        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>
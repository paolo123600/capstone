<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainbg">

    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="match_parent"
        android:layout_height="329dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="-6dp"
        android:text="Medi-Call. An Online Consultation Platform that general practitioners and their patients can use to perform an online consultation. The researchers have decided the name of their application “Medi-Call” a combination of Medicine and an Online Call for the user to be familiarized with the application name. The application features a communication platform, Scheduling System, as well as a patient record system that can help practitioners to keep track of patient data. The application is designed to be for mobile phones, the researchers will also create a windows server side for the application.
"
        android:textSize="@dimen/_15sdp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-6dp" />


    <Button
        android:id="@+id/btn_confirm_act"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_privacy"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/darkround"
        android:text="Confirm"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="321dp" />


</RelativeLayout>
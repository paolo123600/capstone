<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mainbg"
    tools:context="com.medicall.capstone.about">


    <TextView
        android:id="@+id/tv_privacy"
        android:layout_width="360dp"
        android:layout_height="467dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="-1dp"
        android:background="@drawable/circle_button_booknow"
        android:justificationMode="inter_word"
        android:padding="20dp"
        android:text="Medi-Call. An Online Consultation Platform that general practitioners and their patients can use to perform an online consultation. The researchers have decided the name of their application “Medi-Call” a combination of Medicine and an Online Call for the user to be familiarized with the application name. The application features a communication platform, Scheduling System, as well as a patient record system that can help practitioners to keep track of patient data. The application is designed to be for mobile phones, the researchers will also create a windows server side for the application.
"
        android:textSize="@dimen/_15sdp" />


    <Button
        android:id="@+id/btn_confirm_act"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_privacy"
       android:layout_marginTop="250dp"
        android:layout_marginLeft="-275dp"
       android:layout_gravity="center"
        android:background="@drawable/darkround"
        android:text="Confirm"
        android:textColor="@color/white"

        tools:layout_editor_absoluteY="321dp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.medicall.capstone.docsched_page3">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/blue2"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <ImageView
                    android:id="@+id/backspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/ic_backspace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage_Schedules"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/daybg3"
                android:padding="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/docsched_monday"
                            android:layout_weight="1"
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/daybg2"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="Mon"

                            />

                        <Button
                            android:id="@+id/docsched_tuesday"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/daybg2"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:text="tue" />

                        <Button
                            android:id="@+id/docsched_wednesday"
                            android:layout_weight="1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/daybg2"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="wed"/>

                        <Button
                            android:id="@+id/docsched_thursday"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/daybg2"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="thu"/>

                        <Button
                            android:id="@+id/docsched_friday"
                            android:layout_weight="1"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/daybg2"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="fri"/>

                        <Button
                            android:id="@+id/docsched_saturday"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/daybg2"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="SAT"/>

                        <Button
                            android:id="@+id/docsched_sunday"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/daybg2"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:text="SUN"/>

                    </LinearLayout>

                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_4sdp">

                        <TextView
                            android:id="@+id/docsched_starttime"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:hint="Start time"
                            android:background="@drawable/edittext_bg_grey"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:focusableInTouchMode="false" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:padding="@dimen/_4sdp">


                        <TextView
                            android:id="@+id/docsched_endtime"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:hint="End time"
                            android:background="@drawable/edittext_bg_grey"
                            android:padding="@dimen/_10sdp"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="center"
                            android:focusableInTouchMode="false"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_5sdp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <EditText
                                android:id="@+id/docsched_maxbooking"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="number"
                                android:textSize="@dimen/_12sdp"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:hint="Max Booking"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_15sdp">


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                            <AutoCompleteTextView
                                android:id="@+id/docsched_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:hint="Price"
                                android:gravity="center"
                                android:padding="@dimen/_10sdp"
                                android:spinnerMode="dialog"
                                android:prompt="@string/pricelist"/>

                        </com.google.android.material.textfield.TextInputLayout>



                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_20sdp">

                    <Button
                        android:id="@+id/docsched_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/darkround"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Cancel"/>

                    <Button
                        android:id="@+id/docsched_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/darkround"
                        android:textColor="@color/white"
                        android:text="save"/>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>